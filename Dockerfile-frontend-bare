FROM ubuntu:18.04
LABEL maintainer="RGRU <ivlev@rg.ru>"

# RUN apt-get -y update && apt-get -y install sqlite3 
RUN apt-get -y update && apt-get -y install iputils-ping && apt-get -y install curl && apt-get -y install mc

COPY auth-proxy  /app/auth-proxy
COPY configs     /app/configs
COPY migrations  /app/migrations
COPY templates   /app/templates
COPY test_apps   /app/test_apps

EXPOSE 4400

CMD bash -c "cd /app && ./auth-proxy -serve 4400 -env=front"




